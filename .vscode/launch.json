// A launch configuration that compiles the extension and then opens it inside a new window
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${workspaceRoot}"],
      "sourceMaps": true,
      "outFiles": ["${workspaceRoot}/dist/**/*.js"],
      "preLaunchTask": "npm: watch"
    },
    {
      "name": "Launch Extension (Minimal)",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceRoot}/.vscode-test/minimal-extension",
        "--user-data-dir=${workspaceRoot}/.vscode-test/user-data-dev",
        "--disable-extensions",
        "--no-sandbox",
        "--disable-dev-shm-usage"
      ],
      "sourceMaps": true,
      "outFiles": ["${workspaceRoot}/.vscode-test/minimal-extension/dist/**/*.js"],
      "preLaunchTask": "npm: create-minimal"
    }
  ]
}