{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--disable-extensions"
      ],
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "preLaunchTask": "${workspaceFolder}/node_modules/.bin/node esbuild.config.js"
    },
    {
      "name": "Launch Extension with Mock Workspace",
      "type": "extensionHost", 
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--disable-extensions",
        "--disable-workspace-trust",
        "${workspaceFolder}/test/mock-workspace"
      ],
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "preLaunchTask": "${workspaceFolder}/node_modules/.bin/node esbuild.config.js"
    },
    {
      "name": "Launch Tests",
      "type": "extensionHost",
      "request": "launch", 
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/dist/test/e2e"
      ],
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "preLaunchTask": "${workspaceFolder}/node_modules/.bin/tsc -p ./tsconfig.test.json --outDir dist/test"
    },
    {
      "name": "Launch Manual Tests",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/dist/test/e2e",
        "--disable-extensions",
        "--disable-workspace-trust",
        "${workspaceFolder}/test/mock-workspace"
      ],
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "preLaunchTask": "${workspaceFolder}/node_modules/.bin/tsc -p ./tsconfig.test.json --outDir dist/test"
    }
  ]
}