{
  "name": "keypress-notifications",
  "displayName": "Keypress Notifications",
  "description": "Shows notifications for multi-key combinations and command executions in VS Code.",
  "version": "0.1.0",
  "license": "Proprietary",
  "publisher": "VijayGangatharan",
  "icon": "logo.png",
  "author": {
    "name": "Vijay Gangatharan",
    "email": "vijayanand431@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Vijay431/vscode-keypress_snackbar_notification-extension.git"
  },
  "bugs": {
    "url": "https://github.com/Vijay431/vscode-keypress_snackbar_notification-extension/issues"
  },
  "homepage": "https://github.com/Vijay431/vscode-keypress_snackbar_notification-extension#readme",
  "keywords": [
    "vscode",
    "extension",
    "keypress",
    "notifications",
    "clipboard",
    "productivity",
    "typescript",
    "enterprise"
  ],
  "categories": [
    "Other"
  ],
  "engines": {
    "node": ">=16.0.0 <25.0.0",
    "vscode": "^1.102.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "keypress-notifications.activate",
        "title": "Keypress Notifications: Activate",
        "category": "Keypress Notifications",
        "icon": "$(check)"
      },
      {
        "command": "keypress-notifications.deactivate",
        "title": "Keypress Notifications: Deactivate",
        "category": "Keypress Notifications",
        "icon": "$(x)"
      },
      {
        "command": "keypress-notifications.showOutputChannel",
        "title": "Keypress Notifications: Show Output Channel",
        "category": "Keypress Notifications",
        "icon": "$(output)"
      }
    ],
    "configuration": {
      "title": "Keypress Notifications",
      "properties": {
        "keypress-notifications.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable keypress notifications"
        },
        "keypress-notifications.minimumKeys": {
          "type": "number",
          "default": 2,
          "minimum": 1,
          "maximum": 5,
          "description": "Minimum number of keys in combination to show notification (e.g., 2 for Ctrl+C, 3 for Ctrl+Shift+P)"
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "when": "editorTextFocus && keypress-notifications.enabled",
          "command": "keypress-notifications.activate",
          "group": "1_modification@1"
        }
      ]
    }
  },
  "main": "./dist/extension.js",
  "vsce": {
    "baseImageUrl": "./logo.png",
    "dependencies": true,
    "yarn": false
  },
  "scripts": {
    "vscode:prepublish": "tsx esbuild.config.ts --production",
    "build": "tsx esbuild.config.ts",
    "watch": "tsx esbuild.config.ts --watch",
    "package": "vsce package",
    "publish": "vsce publish",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "rm -rf dist && npm run build && npm run create-minimal && tsc -p ./tsconfig.test.json && node ./dist/test/e2e/runE2ETest.js",
    "test:full": "rm -rf dist && npm run build && tsc -p ./tsconfig.test.json && SKIP_OPTIMIZATION=true node ./dist/test/e2e/runE2ETest.js",
    "test:minimal": "npm test",
    "test:clean": "rm -rf .vscode-test/minimal-extension .vscode-test/user-data-isolated .vscode-test/user-data-dev",
    "create-minimal": "tsx scripts/create-minimal-extension.ts",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@eslint/js": "^10.0.0",
    "@stylistic/eslint-plugin": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^16.18.126",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.1",
    "esbuild": "^0.25.8",
    "eslint": "^9.31.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-mocha": "^11.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "glob": "^10.3.10",
    "mocha": "^11.7.1",
    "prettier": "^3.6.2",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  },
  "dependencies": {}
}
